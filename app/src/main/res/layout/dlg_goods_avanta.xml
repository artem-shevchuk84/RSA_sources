<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/lines_dlg_name"
        android:textColor="#FFFF00"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:text="СКИДКА: 10%" />

    <TextView
        android:id="@+id/price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:text="Цена: 0.03" />

    <TextView
        android:id="@+id/stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:text="Ост: 0.03" />

    <EditText
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/price"
        android:layout_toLeftOf="@+id/sum"
        android:layout_toRightOf="@+id/price"
        android:layout_toStartOf="@+id/sum"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:text="0" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/order"
        android:gravity="center"
        android:textColor="#FFFF00"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="Сумма: 23453.23" />

</RelativeLayout>
