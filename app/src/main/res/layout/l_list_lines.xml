<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     
    <TextView android:id="@+id/txtName_lines"
    	android:textSize="16sp"
        android:text="@string/lines_dlg_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <RelativeLayout 
    	android:layout_width="fill_parent"
     	android:layout_height="wrap_content">     
         
    	<TextView android:id="@+id/txtPrice_lines"
         	android:textSize="14sp"
         	android:text="@string/lines_dlg_price"
         	android:textColor="#0000BB"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_alignParentLeft="true"/>
        
         	
        <TextView android:id="@+id/txtQty_lines"
         	android:textSize="14sp"
         	android:text="@string/lines_dlg_number"
         	android:textColor="#FF0000"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_alignParentRight="true"/>
        
        
        <LinearLayout 	android:layout_width="wrap_content"
		         		android:layout_height="wrap_content"
		         		android:gravity="center_horizontal"
		         		android:layout_toLeftOf="@+id/txtQty_lines"
		         		android:layout_toRightOf="@+id/ln_total_lines"
		         		android:orientation="horizontal">
        
		        <TextView android:id="@+id/txt_rec_lines"
		         	android:textSize="14sp"
		         	android:text="0"
		         	android:textColor="#FF00FF"
		         	android:textStyle="bold"
		         	android:layout_width="wrap_content"
		         	android:layout_height="wrap_content"/>
        		<TextView android:id="@+id/help"
		         	android:textSize="14sp"
		         	android:text="/"
		         	android:textColor="#FF00FF"
		         	android:layout_width="wrap_content"
		         	android:layout_height="wrap_content"/>
        		<TextView android:id="@+id/txt_rest_lines"
		         	android:textSize="14sp"
		         	android:text="0"
		         	android:textColor="#FF00FF"
		         	android:layout_width="wrap_content"
		         	android:layout_height="wrap_content"/>
		        
        </LinearLayout>
        
         	
        <LinearLayout android:id="@+id/ln_total_lines"
            	android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
     			android:orientation="horizontal"
     			android:layout_centerInParent="true">
     			 	 	
        		<TextView android:id="@+id/txtTotal_lines"
         				android:textSize="14sp"
         				android:text="@string/lines_dlg_sum"
         				android:textColor="#FF6400"
			         	android:layout_width="wrap_content"
         				android:layout_height="wrap_content"/>
         		       		
        		
         </LinearLayout>
         	
     	                 	
    </RelativeLayout>
   
 </LinearLayout>