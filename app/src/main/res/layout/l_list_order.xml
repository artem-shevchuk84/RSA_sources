<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:background="#1000ff00">

  <ImageView android:id="@+id/list_order_block"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_marginLeft="1mm"/>
       
  <LinearLayout android:layout_width="fill_parent"
     			android:layout_height="wrap_content"
     			android:orientation="vertical"
     			android:layout_marginLeft="1mm">  
     
     <RelativeLayout android:layout_width="fill_parent"
     	android:layout_height="wrap_content">            
    	<TextView android:id="@+id/txtDate_main"
         	android:textSize="13sp"
         	android:text="@string/list_order_date"
         	android:textColor="#000000"
         	android:textStyle="bold"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_alignParentLeft="true"/>
    	
        <TextView android:id="@+id/txtTime_main"
         	android:textSize="13sp"
         	android:text="@string/list_order_time"
         	android:textColor="#000000"
         	android:textStyle="bold"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_marginLeft="3dp"
         	android:layout_toRightOf="@+id/txtDate_main"/>     
         	
        <TextView android:id="@+id/txtCash_main"
         	android:textSize="13sp"
         	android:text="@string/list_order_paytype"
         	android:textColor="#FF0000"
         	android:textStyle="bold"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_alignParentRight="true"
         	android:layout_marginRight="3dip"/>
         	         	
        <LinearLayout android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
     			android:orientation="horizontal"
     			android:layout_toRightOf="@+id/txtTime_main"
     			android:layout_toLeftOf="@+id/txtCash_main"
     			android:gravity="center">     			 	 	
        		<TextView android:id="@+id/txtTotal_main"
         				android:textSize="13sp"
         				android:text="@string/list_order_sum"
         				android:textColor="#000000"
         				android:textStyle="bold"
			         	android:layout_width="wrap_content"
         				android:layout_height="wrap_content"/>
         		<TextView android:id="@+id/txt_orders_currency" 
         		    	android:textSize="13sp"
         				android:text="@string/list_order_curency"
         				android:textColor="#000000"
         				android:textStyle="bold"
			         	android:layout_width="wrap_content"
         				android:layout_height="wrap_content"/>
         </LinearLayout> 	
    </RelativeLayout>
       
     
    <TextView android:id="@+id/txtName_main"
    	android:textSize="16sp"
        android:text="@string/list_order_client"
        android:textStyle="bold"
        android:textColor="#0000BB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>    
     
    <RelativeLayout android:layout_width="fill_parent"
     				android:layout_height="wrap_content">
					    <TextView android:id="@+id/txtShop_main"
					    	android:textSize="14sp"
					        android:text="@string/list_order_adres"
					        android:textStyle="italic"
					        android:textColor="#0000BB"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentTop="true"
					        android:layout_alignParentLeft="true"
					        android:layout_toLeftOf="@+id/txtW_main"/>
					    <TextView android:id="@+id/txtW_main"
					    	android:textSize="14sp"
					        android:text="0.250 кг."
					        android:textColor="#000000"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentTop="true"
					        android:layout_alignParentRight="true"/>
					    
    </RelativeLayout>
    </LinearLayout>
 </LinearLayout>
