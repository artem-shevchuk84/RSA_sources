<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical"
     android:background="@drawable/bground">
   <RelativeLayout android:layout_width="fill_parent"
     			   android:layout_height="wrap_content">
     				
		<ImageView	android:id="@+id/head_panel"
		    		android:layout_height="50dip"
    				android:layout_width="fill_parent"
    				android:src="@drawable/panel_upper" />

		<Button android:id="@+id/head_pbtn_next"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:background="@drawable/states_shapes"
		    android:text="@string/head_addgoods"
		    android:textColor="#ffffff"
		    android:textStyle="bold"
		    android:layout_centerVertical="true"
		    android:layout_alignRight="@+id/head_panel"
		    android:layout_marginRight="7dip"
		    android:layout_marginTop="1dip"/>
		
		<Button android:id="@+id/head_pbtn_prev"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:background="@drawable/states_shapes"
		    android:text="@string/head_save"
		    android:textColor="#ffffff"
		    android:textStyle="bold"
		    android:layout_centerVertical="true"
		    android:layout_alignLeft="@+id/head_panel"
		    android:layout_marginLeft="7dip"
		    android:layout_marginTop="1dip"/>
		
  </RelativeLayout>  
  
   
  <RelativeLayout android:layout_width="fill_parent"
     			  android:layout_height="fill_parent">     
     			  
    <LinearLayout android:id="@+id/line3"
      		android:layout_height="wrap_content"
      		android:layout_width="wrap_content"
      		android:layout_centerHorizontal="true"
      		android:layout_alignParentBottom="true" 
      		android:layout_marginLeft="2mm"
      		android:layout_marginRight="2mm"
      		android:orientation="horizontal">
      		  		 
	    <Button  android:id="@+id/btnCancel_head"
	        	 android:layout_width="wrap_content"
	        	 android:layout_height="35dip"
	        	 android:layout_marginBottom="6dip"
	        	 android:layout_marginLeft="5dip"
	     		 android:layout_marginRight="8dip"
	     		 android:background="@drawable/states_shapes2"
	        	 android:text="@string/head_cancel"
			 	 android:textColor="#ffffff"
			 	 android:paddingLeft="12dip"
		         android:paddingRight="11dip"
			     android:textStyle="bold"
			     android:textSize="20sp"/>
	    <Button  android:id="@+id/btnQuest_head"
	        	 android:layout_width="wrap_content"
	        	 android:layout_height="35dip"
	        	 android:layout_marginBottom="6dip"
	        	 android:layout_marginLeft="5dip"
	     		 android:layout_marginRight="5dip"
	     		 android:background="@drawable/states_shapes2"
	        	 android:text="Анкета"
			 	 android:textColor="#ffffff"
			 	 android:paddingLeft="12dip"
		         android:paddingRight="12dip"
			     android:textStyle="bold"
			     android:textSize="20sp"/>
	    <Button
			        android:id="@+id/btnRemark_head"
			        android:layout_width="wrap_content"
			        android:layout_height="35dip"
			        android:background="@drawable/states_shapes2"
			        android:layout_marginBottom="6dip"
			        android:layout_marginLeft="5dip"
			        android:layout_marginRight="5dip"
			        android:text="@string/head_btn_remark"
			        android:textColor="#ffffff"
			        android:paddingLeft="11dip"
			        android:paddingRight="12dip"
			        android:textStyle="bold" 
			        android:textSize="20sp"/>
	    <LinearLayout
				    	android:id="@+id/lnrReturn" 
				    	android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:orientation="vertical"
				        android:layout_marginTop = "-3dp"
				        android:gravity="center"
				        android:visibility="visible">
				    
					<CheckBox
				        android:id="@+id/isReturn"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop = "-2dp"
				        android:checked="false"
				        android:text=" ВЗРТ" />
				</LinearLayout>
	    </LinearLayout>
    
    
      <TextView 
      		 android:layout_height="wrap_content" 
      		 android:id="@+id/textView1" 
      		 android:text="@string/head_selectclient" 
      		 android:layout_width="wrap_content" 
      		 android:layout_alignParentTop="true" 
      		 android:layout_centerHorizontal="true"
      		 android:textSize="23sp"/>
      <Spinner android:layout_height="wrap_content"
      						android:textSize="13sp"
      						android:id="@+id/cmbCust_head" 
      						android:layout_width="fill_parent" 
      						android:layout_below="@+id/textView1"
      						android:completionThreshold="1"
      						android:layout_centerHorizontal="true"
      						android:singleLine="true"
      						android:layout_marginLeft="1mm"
      						android:layout_marginRight="1mm"/>
      <TextView android:layout_height="wrap_content" 
      			android:id="@+id/textView2" 
      			android:text="@string/head_selectadress" 
      			android:layout_width="wrap_content" 
      			android:layout_below="@+id/cmbCust_head" 
      			android:layout_centerHorizontal="true"
      			android:textSize="23sp"/>      			
      <Spinner android:id="@+id/spnShop_head" 
      		   android:textSize="13sp"
      		   android:layout_height="wrap_content" 
      		   android:layout_width="fill_parent" 
      		   android:layout_below="@+id/textView2" 
      		   android:layout_centerHorizontal="true"
      		   android:layout_marginLeft="1mm"
      		   android:layout_marginRight="1mm"/>      		   
      <LinearLayout android:id="@+id/line2"
      		android:layout_height="wrap_content"
      		android:layout_width="wrap_content"
      		android:layout_centerHorizontal="true"
      		android:layout_below="@+id/spnShop_head" 
      		android:layout_marginTop="1mm"
      		android:layout_marginLeft="2mm"
      		android:layout_marginRight="2mm"
      		android:orientation="horizontal">
	    <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb1"
      		android:textOff="cb1"
			android:layout_marginLeft="2dp"
      		android:id="@+id/tbtn_cb1" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>	
      	<ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="@string/head_WH"
      		android:textOff="@string/head_WH"
			android:layout_marginLeft="2dp"
      		android:id="@+id/tbtn_Sklad_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
            android:layout_marginLeft="2dp"
      		android:textOn="@string/head_paytype"
      		android:textOff="@string/head_paytype" 
      		android:id="@+id/tbtn_Cash_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb2"
      		android:textOff="cb2" 
      		android:id="@+id/tbtn_cb2" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb3"
      		android:textOff="cb3" 
      		android:id="@+id/tbtn_cb3" 
      		android:layout_height="wrap_content"
			android:layout_marginLeft="2dp"
      		android:textSize="14sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb4"
      		android:textOff="cb4"
			android:layout_marginLeft="2dp"
      		android:id="@+id/tbtn_cb4" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
            android:layout_marginLeft="2dp"
      		android:textOn="@string/head_vat"
      		android:textOff="@string/head_vat" 
      		android:id="@+id/tbtn_VAT_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
            android:layout_marginLeft="2dp"
      		android:textOn="@string/head_delay"
      		android:textOff="@string/head_delay" 
      		android:id="@+id/tbtn_Delay_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>	
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
            android:layout_marginLeft="2dp"
      		android:textOn="@string/head_disc"      		 
      		android:textOff="@string/head_disc"
      		android:id="@+id/tbtn_Discount_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>	
      	<ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
      		android:textOn="@string/head_deliv"      		 
      		android:textOff="@string/head_deliv"
      		android:id="@+id/tbtn_Delivery_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>
      	<ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
            android:visibility="gone"
            android:checked="true"
            android:layout_marginLeft="2dp"
      		android:textOn="ФОТО"      		 
      		android:textOff="ФОТО"
      		android:id="@+id/tbtn_Photo_head" 
      		android:layout_height="wrap_content"
      		android:textSize="14sp"
      		android:textStyle="bold"/>
      </LinearLayout>

      <TextView
          android:id="@+id/txtRemark_head"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_above="@+id/line3"
          android:layout_below="@+id/line2"
          android:layout_margin="1mm"
          android:background="#2822b14c"
          android:gravity="left"
          android:textColor="#ababab"
          android:textSize="23sp" />

   </RelativeLayout>
</LinearLayout>