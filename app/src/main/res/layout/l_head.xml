<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_alignParentTop="true"
    	android:paddingTop="48dip"
        android:orientation="vertical">
    <RelativeLayout android:layout_width="fill_parent"
     			  android:layout_height="fill_parent">        		 

    <LinearLayout android:id="@+id/line3"
      		android:layout_height="wrap_content"
      		android:layout_width="wrap_content"
      		android:layout_centerHorizontal="true"
      		android:layout_alignParentBottom="true" 
      		android:layout_marginLeft="2mm"
      		android:layout_marginRight="2mm"
      		android:orientation="horizontal">    
		    <Button
		        android:id="@+id/btnCancel_head"
		        android:layout_width="wrap_content"
		        android:layout_height="43dip"
		        android:layout_marginBottom="8dip"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		        android:background="@drawable/states_btn_cancel"
		        android:text="@string/head_cancel"
		        android:textColor="#ffffff"
		        android:paddingLeft="12dip"
		        android:paddingRight="12dip"
		        android:textStyle="bold" />
		    
		    <Button
		        android:id="@+id/btnQuest_head"
		        android:layout_width="wrap_content"
		        android:layout_height="43dip"
		        android:layout_marginBottom="8dip"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		        android:background="@drawable/states_btn_remark"
		        android:text="Анкета"
		        android:textColor="#ffffff"
		        android:paddingLeft="12dip"
		        android:paddingRight="12dip"
		        android:textStyle="bold" />
			<Button
		        android:id="@+id/btnRemark_head"
		        android:layout_width="wrap_content"
		        android:layout_height="43dip"
		        android:layout_marginBottom="8dip"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		        android:background="@drawable/states_btn_remark"
		        android:text="@string/head_btn_remark"
		        android:textColor="#ffffff"
		        android:paddingLeft="12dip"
		        android:paddingRight="12dip"
		        android:textStyle="bold" />
			<LinearLayout
			    	android:id="@+id/lnrReturn" 
			    	android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop = "-3dp"
			        android:gravity="center"
			        android:visibility="invisible">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="ВОЗВРАТ"
			        android:textSize="9sp"
			        android:textStyle="bold"
			        android:layout_centerHorizontal="true"/>
				<CheckBox
			        android:id="@+id/isReturn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop = "-10dp"
			        android:checked="false"
			        android:text="" />
			</LinearLayout>
	</LinearLayout>
	
      <TextView 
      		 android:layout_height="wrap_content" 
      		 android:id="@+id/textView1" 
      		 android:text="@string/head_selectclient" 
      		 android:layout_width="wrap_content" 
      		 android:layout_alignParentTop="true" 
      		 android:layout_centerHorizontal="true"/>
      <Spinner android:layout_height="wrap_content"
      						android:textSize="13sp"
      						android:id="@+id/cmbCust_head" 
      						android:layout_width="fill_parent" 
      						android:layout_below="@+id/textView1"
      						android:completionThreshold="1"
      						android:layout_centerHorizontal="true"
      						android:singleLine="true"
      						android:layout_marginLeft="1mm"
      						android:layout_marginRight="1mm"/>
      <TextView android:layout_height="wrap_content" 
      			android:id="@+id/textView2" 
      			android:text="@string/head_selectadress" 
      			android:layout_width="wrap_content" 
      			android:layout_below="@+id/cmbCust_head" 
      			android:layout_centerHorizontal="true"/>      			
      <Spinner android:id="@+id/spnShop_head" 
      		   android:textSize="13sp"
      		   android:layout_height="wrap_content" 
      		   android:layout_width="fill_parent" 
      		   android:layout_below="@+id/textView2" 
      		   android:layout_centerHorizontal="true"
      		   android:layout_marginLeft="1mm"
      		   android:layout_marginRight="1mm"/>      		   
      <LinearLayout android:id="@+id/line2"
      		android:layout_height="wrap_content"
      		android:layout_width="wrap_content"
      		android:layout_centerHorizontal="true"
      		android:layout_below="@+id/spnShop_head" 
      		android:layout_marginTop="1mm"
      		android:layout_marginLeft="2mm"
      		android:layout_marginRight="2mm"
      		android:orientation="horizontal">
		<ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb1"
      		android:textOff="cb1" 
      		android:id="@+id/tbtn_cb1" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
      	<ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="@string/head_WH"
      		android:textOff="@string/head_WH" 
      		android:id="@+id/tbtn_Sklad_head" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="@string/head_paytype"
      		android:textOff="@string/head_paytype" 
      		android:id="@+id/tbtn_Cash_head" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb2"
      		android:textOff="cb2" 
      		android:id="@+id/tbtn_cb2" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb3"
      		android:textOff="cb3" 
      		android:id="@+id/tbtn_cb3" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="cb4"
      		android:textOff="cb4" 
      		android:id="@+id/tbtn_cb4" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"
      		android:visibility="gone"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:id="@+id/tbtn_VAT_head" 
      		android:textOff="бНДС" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"/>
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="@string/head_delay"
      		android:textOff="@string/head_delay" 
      		android:id="@+id/tbtn_Delay_head" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"/>	
        <ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      		android:textOn="@string/head_disc"      		 
      		android:textOff="@string/head_disc"
      		android:id="@+id/tbtn_Discount_head" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"/>	
      	<ToggleButton android:layout_width="0dp"
			android:layout_weight="1"
      	    android:visibility="gone"
      		android:textOn="@string/head_deliv"      		 
      		android:textOff="@string/head_deliv"
      		android:id="@+id/tbtn_Delivery_head" 
      		android:layout_height="wrap_content"
      		android:textSize="10sp"
      		android:textStyle="bold"/>	
      </LinearLayout>
      
      <TextView
          android:id="@+id/txtRemark_head"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_above="@+id/line3"
          android:layout_below="@+id/line2"
          android:layout_margin="1mm"
          android:background="#2822b14c"
          android:gravity="left"
          android:textColor="#0000bb"
          android:textSize="13sp" />

   </RelativeLayout>
    	
    	
    </LinearLayout>
    
    <ImageView	android:id="@+id/head_panel"
		    	android:layout_height="43dip"
    			android:layout_width="fill_parent"
    			android:src="@drawable/blue_line"
    			android:layout_alignParentTop="true"/>
    
    <TextView   android:id="@+id/head_title"
		    	android:layout_height="43dip"
    			android:layout_width="wrap_content"
    			android:layout_alignParentTop="true" 
    			android:layout_toLeftOf="@+id/head_pbtn_next"
    			android:layout_toRightOf="@+id/head_pbtn_prev"
    			android:text="@string/head_title_blue"
    			android:textColor="#ffffff"
    			android:gravity="center"
    			android:textSize="14sp"
    			android:textStyle="bold"/>
    
    <ImageView	android:id="@+id/blackBorder"
		    	android:layout_height="1px"
    			android:layout_width="fill_parent"
    			android:src="@drawable/black_border"
				android:layout_below="@+id/head_panel"/>
    
    <ImageView	android:id="@+id/dropShadow"
		    	android:layout_height="3dip"
    			android:layout_width="fill_parent"
    			android:src="@drawable/shadow"
    			android:layout_below="@+id/blackBorder"/>
    
    <Button	    android:id="@+id/head_pbtn_next"
		    	android:layout_height="43dip"
    			android:layout_width="43dip"
    			android:background="@drawable/states_btn_lines"
    			android:layout_alignParentTop="true"
    			android:layout_alignParentRight="true"/>
    
    <Button	    android:id="@+id/head_pbtn_prev"
		    	android:layout_height="43dip"
    			android:layout_width="43dip"
    			android:background="@drawable/states_btn_save"
    			android:layout_alignParentTop="true"
    			android:layout_alignParentLeft="true"/>
    
    
    
    <View
        android:layout_width="1px"
        android:layout_height="43dip"
        android:background="#50ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dip"/>
    <View
        android:layout_width="1px"
        android:layout_height="43dip"
        android:background="#50ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dip"/>
    
</RelativeLayout>