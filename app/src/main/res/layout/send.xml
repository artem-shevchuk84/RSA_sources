<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView1_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/send_date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="3dp"/>

    <DatePicker
        android:id="@+id/datePicker_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="4dp"/>
	<RelativeLayout android:layout_width="fill_parent"
     	android:layout_height="fill_parent"
     	android:gravity="center">
     	
    	<Button
        	android:id="@+id/btnSend_send"
        	android:layout_height="43dip"
        	android:layout_width="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:layout_toRightOf="@+id/chkPhoto"
        	android:layout_alignParentRight="true"
        	android:text="@string/send_send"
        	android:textColor="#FFFFFF"
        	android:layout_marginTop="3dip"
        	android:layout_marginLeft="20dip"
        	android:background="@drawable/states_btn_cancel"/>
    	<CheckBox
	        android:id="@+id/chkPhoto"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/chkNew"
	        android:layout_alignParentBottom="true"
	        android:textSize="10sp"
	        android:textStyle="bold"
	        android:gravity="center"
	        android:text="@string/send_photo" />  
	    <CheckBox
	        android:id="@+id/chkNew"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentBottom="true"
	        android:textSize="10sp"
	        android:textStyle="bold"
	        android:gravity="center"
	        android:text="@string/send_new" />  	
    	<TextView
        	android:id="@+id/txtLog_send"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:background="#2822b14c"
        	android:gravity="left"
        	android:layout_marginTop="8dp"
        	android:layout_above="@id/btnSend_send"
        	android:textColor="#FFA564"
        	android:textSize="13sp" />
    </RelativeLayout>
   	
</LinearLayout>
