<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     
     <RelativeLayout android:layout_width="fill_parent"
     			   android:layout_height="wrap_content">
	    <TextView android:id="@+id/txtName_lines"
	    	android:textSize="16sp"
	        android:text="@string/lines_dlg_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"/>
	    
	    <TextView android:id="@+id/txtQty_lines"
	         	android:textSize="20sp"
	         	android:textStyle="bold"
	         	android:text="@string/lines_dlg_number"
	         	android:textColor="#00FFFF"
	         	android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
	         	android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <RelativeLayout
    	android:layout_width="fill_parent"
     	android:layout_height="wrap_content">     
         
    	<TextView android:id="@+id/txtPrice_lines"
         	android:textSize="14sp"
         	android:text="@string/lines_dlg_price"
         	android:textColor="#00FF00"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_alignParentLeft="true"/>

		<TextView android:id="@+id/help"
			android:textSize="14sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"/>
        
        <LinearLayout 	android:layout_width="wrap_content"
		         		android:layout_height="wrap_content"
		         		android:gravity="center_horizontal"
		         		android:layout_alignParentRight="true"
		         		android:orientation="horizontal">
        
		        <TextView android:id="@+id/txt_rec_lines"
		         	android:textSize="14sp"
		         	android:text="0"
		         	android:textColor="#00FFFF"
		         	android:textStyle="bold"
		         	android:layout_width="wrap_content"
		         	android:layout_height="wrap_content"/>
        		<TextView 
        		    android:id="@+id/txt_rec_separ"
		         	android:textSize="14sp"
		         	android:visibility="invisible"
		         	android:text="/"
		         	android:textColor="#00FFFF"
		         	android:layout_width="wrap_content"
		         	android:layout_height="wrap_content"/>
        		<TextView android:id="@+id/txt_rest_lines"
		         	android:textSize="14sp"
		         	android:text="0"
		         	android:textColor="#00FFFF"
		         	android:layout_width="wrap_content"
		         	android:layout_height="wrap_content"/>
		        
        </LinearLayout>
        
        
        
         	
        <LinearLayout android:id="@+id/ln_total_lines"
            	android:layout_width="wrap_content"
     			android:layout_height="wrap_content"
     			android:orientation="horizontal"
     			android:layout_centerInParent="true">
     			 	 	
        		<TextView android:id="@+id/txtTotal_lines"
         				android:textSize="14sp"
         				android:text="@string/lines_dlg_sum"
         				android:textColor="#FFFF00"
			         	android:layout_width="wrap_content"
         				android:layout_height="wrap_content"/>
         	       		
        		
         </LinearLayout>
         	
     	                 	
    </RelativeLayout>
   
 </LinearLayout>