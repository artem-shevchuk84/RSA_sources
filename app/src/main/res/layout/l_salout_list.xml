<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 	android:id="@+id/lSalout1"
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:orientation="vertical"
    				android:layout_alignParentLeft="true"
    				android:gravity="left"
    				android:layout_toLeftOf="@+id/lSalout2"
    				android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
    				android:paddingTop="3dip"
    				android:paddingBottom="3dip">
		<TextView 
		    android:id="@+id/txtSalout_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="#000000"
		    android:text="2015-10-15 10:31:11"/>
		<TextView 
		    android:id="@+id/txtSalout_invoice"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="#000000"
		    android:text="АК-00134256"
		    android:textStyle="bold"/>
	</LinearLayout>
	
    <LinearLayout 	android:id="@+id/lSalout2"
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:orientation="vertical"
    				android:layout_alignParentRight="true"
    				android:gravity="right"
    				android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft">
		<TextView 
		    android:id="@+id/txtSalout_wh"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="#000000"
		    android:text="Основной"/>
		<TextView 
		    android:id="@+id/txtTotalSalout_sum"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="#000000"
		    android:text="343.00"
		    android:textStyle="bold"/>
	</LinearLayout>
	

</RelativeLayout>