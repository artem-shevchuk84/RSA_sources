<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_alignParentTop="true"
    	android:paddingTop="43dip"
        android:orientation="vertical">
		<LinearLayout 	android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:orientation="horizontal"
    				android:layout_margin="10dip">
       <ImageView android:id="@+id/about_title_img"
		    	  android:layout_height="wrap_content"
    			  android:layout_width="wrap_content"
    			  android:src="@drawable/icon" />
       
       <LinearLayout android:layout_width="wrap_content"
    				 android:layout_height="wrap_content"
    				 android:orientation="vertical">
    		<TextView   android:id="@+id/about_name"
           				android:layout_width="wrap_content"
           				android:layout_height="wrap_content"
           				android:text="@string/about_name"
           				android:textColor="#000000"
		    			android:textStyle="bold"
           				android:textAppearance="?android:attr/textAppearanceSmall"
           				android:layout_marginLeft="10dip"/>
    	    <TextView   android:id="@+id/about_ver"
           				android:layout_width="wrap_content"
           				android:layout_height="wrap_content"
           				android:text="@string/about_ver"
           				android:textColor="#000000"
           				android:textAppearance="?android:attr/textAppearanceSmall"
           				android:layout_marginLeft="10dip"/>
       </LinearLayout>


         
     </LinearLayout>    
    	<ScrollView
         android:id="@+id/about_scroll"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:scrollHorizontally="false"
         android:scrollbarAlwaysDrawVerticalTrack="true">

         <LinearLayout
             android:id="@+id/about_scroll_layout"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
    	    
                <TextView android:id="@+id/about_license_topic1"
           				android:layout_width="wrap_content"
           				android:layout_height="wrap_content"
           				android:text="@string/about_topic1"
           				android:textColor="#000000"
           				android:textStyle="bold"
           				android:textAppearance="?android:attr/textAppearanceSmall"
           				android:layout_marginLeft="10dip"/>
                	<TextView android:id="@+id/about_topic1_detail"
           					android:layout_width="wrap_content"
           					android:layout_height="wrap_content"
           					android:text="@string/about_topic1_det"
           					android:textColor="#000000"
           					android:textAppearance="?android:attr/textAppearanceSmall"
           					android:layout_marginLeft="15dip"/>
                <TextView android:id="@+id/about_license_topic2"
           				android:layout_width="wrap_content"
           				android:layout_height="wrap_content"
           				android:text="@string/about_topic2"
           				android:textColor="#000000"
           				android:textStyle="bold"
           				android:textAppearance="?android:attr/textAppearanceSmall"
           				android:layout_marginLeft="10dip"/>
                    <TextView android:id="@+id/about_topic2_detail"
           					android:layout_width="wrap_content"
           					android:layout_height="wrap_content"
           					android:text="@string/about_topic2_det"
           					android:textColor="#000000"
           					android:textAppearance="?android:attr/textAppearanceSmall"
           					android:layout_marginLeft="15dip"/>
                <TextView android:id="@+id/about_license_topic3"
           				android:layout_width="wrap_content"
           				android:layout_height="wrap_content"
           				android:text="@string/about_topic3"
           				android:textColor="#000000"
           				android:textStyle="bold"
           				android:textAppearance="?android:attr/textAppearanceSmall"
           				android:layout_marginLeft="10dip"/>
                    <TextView android:id="@+id/about_topic3_detail"
           					android:layout_width="wrap_content"
           					android:layout_height="wrap_content"
           					android:text="@string/about_topic3_det"
           					android:textColor="#000000"
           					android:textAppearance="?android:attr/textAppearanceSmall"
           					android:layout_marginLeft="15dip"/>
                <TextView android:id="@+id/about_license_topic4"
           				android:layout_width="wrap_content"
           				android:layout_height="wrap_content"
           				android:text="@string/about_topic4"
           				android:textColor="#000000"
           				android:textStyle="bold"
           				android:textAppearance="?android:attr/textAppearanceSmall"
           				android:layout_marginLeft="10dip"/>
                	<TextView android:id="@+id/about_topic4_detail"
           					android:layout_width="wrap_content"
           					android:layout_height="wrap_content"
           					android:text="@string/about_topic4_det"
           					android:textColor="#000000"
           					android:textAppearance="?android:attr/textAppearanceSmall"
           					android:layout_marginLeft="15dip"/>
             
         </LinearLayout>
     </ScrollView>
    	
    </LinearLayout>
    
    <ImageView	android:id="@+id/about_panel"
		    	android:layout_height="43dip"
    			android:layout_width="fill_parent"
    			android:src="@drawable/blue_line"
    			android:layout_alignParentTop="true"/>
    
    <TextView   android:id="@+id/about_title"
		    	android:layout_height="43dip"
    			android:layout_width="fill_parent"
    			android:layout_alignParentTop="true" 
    			android:layout_toRightOf="@+id/about_pbtn_prev"
    			android:text="@string/app_name"
    			android:textColor="#ffffff"
    			android:gravity="center"
    			android:textSize="18sp"
    			android:textStyle="bold"/>
    
    <ImageView	android:id="@+id/blackBorder"
		    	android:layout_height="1px"
    			android:layout_width="fill_parent"
    			android:src="@drawable/black_border"
				android:layout_below="@+id/about_panel"/>
    
    <ImageView	android:id="@+id/dropShadow"
		    	android:layout_height="3dip"
    			android:layout_width="fill_parent"
    			android:src="@drawable/shadow"
    			android:layout_below="@+id/blackBorder"/>
    
    <Button	    android:id="@+id/about_pbtn_prev"
		    	android:layout_height="43dip"
    			android:layout_width="43dip"
    			android:background="@drawable/states_btn_back"
    			android:layout_alignParentTop="true"
    			android:layout_alignParentLeft="true"/>
    
    
    <View
        android:layout_width="1px"
        android:layout_height="43dip"
        android:background="#50ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dip"/>
    
</RelativeLayout>