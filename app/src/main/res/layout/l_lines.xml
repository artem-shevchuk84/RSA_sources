<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_alignParentTop="true"
    	android:paddingTop="43dip"
        android:orientation="vertical">
        
        <ListView 	android:id="@+id/android:list" 
         			android:layout_height="fill_parent" 
     				android:layout_width="fill_parent"
     				android:paddingLeft="2dip"
     			    android:paddingRight="2dip"
     			    android:fastScrollEnabled="true"/>
        
        <LinearLayout android:id="@+id/android:empty" 
         		   android:layout_width="fill_parent"
     			   android:layout_height="wrap_content">
     	   <TextView android:id="@+id/txtEmpty_lines" 
      		 android:layout_height="fill_parent"
      		 android:layout_width="fill_parent"
      		 android:layout_margin="15dp" 
      		 android:text="@string/lines_empty" 
      		 android:layout_gravity="center"
      		 android:gravity="center"
      		 android:textAppearance="?android:attr/textAppearanceLarge"/>
     	</LinearLayout>
     	   
		
    </LinearLayout>
    
    <ImageView	android:id="@+id/lines_panel"
		    	android:layout_height="43dip"
    			android:layout_width="fill_parent"
    			android:src="@drawable/blue_line"
    			android:layout_alignParentTop="true"/>
    
    <LinearLayout 	android:id="@+id/lines_paneltext"
		    		android:layout_width="wrap_content"
     				android:layout_height="43dip"
     				android:orientation="horizontal"
     				android:layout_alignParentTop="true"
		    		android:layout_toRightOf="@+id/lines_pbtn_prev"
		    		android:layout_toLeftOf="@+id/lines_pbtn_next"
		    		android:gravity="center">
			<TextView android:id="@+id/lines_txtTotalSum"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/lines_txtTotalSum"
		    	android:textColor="#ffff00"
		    	android:textStyle="bold"
		    	android:textAppearance="?android:attr/textAppearanceLarge"
		    	android:layout_gravity="center"/>
			<TextView android:id="@+id/lines_txtTotalSum_text"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/lines_txtTotalSum_text"
		    	android:textColor="#ffff00"
		    	android:textStyle="bold"
		    	android:layout_marginLeft="3dip"
		    	android:layout_gravity="center"/>
	</LinearLayout>
    
    <ImageView	android:id="@+id/blackBorder"
		    	android:layout_height="1px"
    			android:layout_width="fill_parent"
    			android:src="@drawable/black_border"
				android:layout_below="@+id/lines_panel"/>
    
    <ImageView	android:id="@+id/dropShadow"
		    	android:layout_height="3dip"
    			android:layout_width="fill_parent"
    			android:src="@drawable/shadow"
    			android:layout_below="@+id/blackBorder"/>
    
    <Button	    android:id="@+id/lines_pbtn_prev"
		    	android:layout_height="43dip"
    			android:layout_width="43dip"
    			android:background="@drawable/states_btn_back"
    			android:layout_alignParentTop="true"
    			android:layout_alignParentLeft="true"/>
    <Button	    android:id="@+id/lines_pbtn_next"
		    	android:layout_height="43dip"
    			android:layout_width="43dip"
    			android:background="@drawable/states_btn_add"
    			android:layout_alignParentTop="true"
    			android:layout_alignParentRight="true"/>
    <View
        android:layout_width="1dp"
        android:layout_height="43dip"
        android:background="#50ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dip"/>
    <View
        android:layout_width="1dp"
        android:layout_height="43dip"
        android:background="#50ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dip"/>

    
</RelativeLayout>